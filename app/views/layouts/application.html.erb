<!DOCTYPE html>
<html>
  <head>
    <title>IskoexchangeApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>

  <body class="d-flex flex-column">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <!-- Navbar brand -->
      <%= link_to "IskoExchange", root_url, class: "navbar-brand" %>
      <!-- Collapse toggle button -->
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <!-- Links -->
      <div class="collapse navbar-collapse" id="navbarNav">
        <!-- Left side -->
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <%= link_to "Questions", questions_url, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">About</a>
          </li>
        </ul>
        <!-- Right side -->
        <ul class="navbar-nav">
          <!-- Ask a Question -->
          <li class="nav-item">
            <%= link_to "Ask a Question", new_question_url, class: " btn btn-outline-secondary" %>
          </li>
          &nbsp;
          <!-- Search form -->
          <form class="form-inline">
            <input class="form-control mr-sm-2" type="search" placeholder="Search">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
          </form>
          <% if current_user %>
            <!-- When logged in -->
            &nbsp;&nbsp;
            <span class="navbar-text">Logged in as: <strong><%= current_user.display_name %></strong>.</span>
            &nbsp;&nbsp;
            <%= link_to "Log Out", logout_url, method: :delete, class: "btn btn-outline-danger" %>
          <% else %>
            <!-- If no one is logged in -->
            &nbsp;
            <li class="nav-item">
              <%= link_to "Log In", login_url, class: "btn btn-outline-secondary" %>
            </li>
            &nbsp;
            <li class="nav-item">
              <%= link_to "Sign Up", signup_url, class: "btn btn-outline-primary" %>
            </li>
          <% end -%>
        </ul>
      </div>
    </nav>
    
    <!-- Main content -->
    <div class="container flex-grow" id="main-content">
      <br><%= yield %>  
    </div>
    
    <!-- Footer -->
    <footer class="bg-dark text-white mt-4">
        <div class="container py-3">
            <div class="row">
                <div class="col-12">
                  <h5>Footer goes here.</h5>
                </div>
            </div>
        </div>
    </footer>
  </body>
</html>
