<h2><%= @question.title %></h2>
<h5>Asked by <%= link_to @question.user.display_name, @question.user %> on <%= @question.created_at %>.</h5><hr>
<div><%= @question.content %></div>
<br>

<br>
<hr>
<h4>Answers</h4>
<% @question.answers.each do |answer| %>
  <div><strong><%= link_to answer.user.display_name, answer.user %></strong></div>
  <div><%= answer.created_at %></div>
  <div><%= answer.content %></div>
<% end %>
<br><br><br>
<% if current_user %>
  <%= form_for(@answer) do |f| %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :question_id, value:  @question.id %>
    <%= f.label :content  %><%= f.text_area :content, :placeholder => "Answer here", rows: "10", cols: "80", class: "form-control" %><br>
    <%= f.submit "Answer question", class: "btn btn-primary" %>
  <% end %>
<% end %>
