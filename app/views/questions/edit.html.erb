<h2>Edit question</h2><hr>

<div class="row">
	<div class="col-6 offset-3">
	    <% if @question.errors.any? %>
			<% @question.errors.messages.each do |err| %>
				<div class="alert alert-danger"><%= err[0].to_s.gsub("_"," ").capitalize %> <%= err[1][0].to_s %>.</div>
			<% end %>
		<% end %>
	    
		<%= form_for(@question) do |f| %>
		  <%= f.hidden_field :user_id, value: current_user.id %>
		  <%= f.label :title %><%= f.text_field :title, size: "81", class: "form-control", value: @question.title %><br>
		  <%= f.label :content %><%= f.text_area :content, rows: "10", cols: "80", class: "form-control", value: @question.content %><br>
		  <%= f.submit "Update question", class: "btn btn-primary" %>
		<% end %>		
	</div>
</div>
