<%= form_for(@question) do |f| %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.label :title%><br /><br />
    <%= f.text_field :title, size: "81"%><br /><br />
    <%= f.label :content%><br /><br />
    <%= f.text_area :content, rows: "10", cols: "80" %><br /><br />
    <%= f.submit %>
<% end %>