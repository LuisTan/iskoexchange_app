<h1 class="text-center">
	Create your own IskoExchange account for free.
</h1><br>

<div class="row">
	<div class="col-6 offset-3">
		<% if @user.errors.any? %>
			<% @user.errors.messages.each do |err| %>
				<div class="alert alert-danger"><%= err[0].to_s.gsub("_"," ").capitalize %> <%= err[1][0].to_s %>.</div>
			<% end %>
		<% end %>

		<%= form_for @user, url: signup_path do |f| %>
			<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
			<%= f.label :email %><%= f.text_field :email, class: "form-control", value: @email || "" %><br>
			<%= f.label :display_name %><%= f.text_field :display_name, class: "form-control", value: @display_name || "" %><br>
			<%= f.label :password %><%= f.password_field :password, class: "form-control", value: @password || "" %><br>
			<%= f.label :password_confirmation %><%= f.password_field :password_confirmation, class: "form-control", value: @email || "" %><br>
			<%= f.submit "Register", class: "btn btn-primary" %>
		<% end %>		
	</div>
</div>

