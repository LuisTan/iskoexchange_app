<h1 class="text-center">
	Create your own IskoExchange account for free.
</h1><br>

<div class="row">
	<div class="col-6 offset-3">
		<%= form_for @user, url: signup_path do |f| %>
			<%= hidden_field_tag :authenticity_token, form_authenticity_token %>

            <div class="form-group">
                <%= f.label :email %>
                <div class="is-invalid"><%= f.text_field :email, class: "form-control", value: @user.email || "" %></div>    
                <div class="invalid-feedback" style="display: block;"><%= @user.errors[:email].first %></div>
            </div>

            <div class="form-group">
                <%= f.label :display_name %>
                <div class="is-invalid"><%= f.text_field :display_name, class: "form-control", value: @user.display_name || "" %></div>    
                <div class="invalid-feedback" style="display: block;"><%= @user.errors[:display_name].first %></div>
            </div>

            <div class="form-group">
                <%= f.label :password %>    
                <div class="is-invalid"><%= f.password_field :password, class: "form-control" %></div>
                <div class="invalid-feedback" style="display: block;"><%= @user.errors[:password].first %></div>
            </div>
            
            <div class="form-group">
                <%= f.label :password_confirmation %>
                <div class="is-invalid"><%= f.password_field :password_confirmation, class: "form-control" %></div>    
                <div class="invalid-feedback" style="display: block;"><%= @user.errors[:password_confirmation].first %></div>
            </div>
			
			<%= f.submit "Register", class: "btn btn-primary" %>
		<% end %>		
	</div>
</div>

